<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/user_additional"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="android.this.is.a.really.long.package.name" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/user_additional"
        app:layout_constraintStart_toStartOf="@+id/user_additional"
        app:layout_constraintTop_toBottomOf="@+id/user_additional"
        tools:ignore="RtlSymmetry"
        tools:text="Nested.Class.Names" />

</androidx.constraintlayout.widget.ConstraintLayout>